<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/cocktailsFragment">

    <fragment
        android:id="@+id/cocktailsFragment"
        android:name="com.test.thecocktaildb.cocktailsScreen.CocktailsFragment"
        android:label="CocktailsFragment"
        tools:layout="@layout/cocktails_fragment">
        <action
            android:id="@+id/action_cocktailsFragment_to_searchCocktailsFragment"
            app:destination="@id/searchCocktailsFragment" />
        <action
            android:id="@+id/action_cocktailsFragment_to_cocktailDetailsFragment"
            app:destination="@id/cocktailDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/cocktailDetailsFragment"
        android:name="com.test.thecocktaildb.cocktailDetailsScreen.CocktailDetailsFragment"
        android:label="CocktailDetailsFragment"
        tools:layout="@layout/cocktail_details_fragment"/>

    <fragment
        android:id="@+id/searchCocktailsFragment"
        android:name="com.test.thecocktaildb.searchCocktailsScreen.SearchCocktailsFragment"
        android:label="SearchCocktailsFragment"
        tools:layout="@layout/search_cocktails_fragment">
        <action
            android:id="@+id/action_searchCocktailsFragment_to_cocktailDetailsFragment"
            app:destination="@id/cocktailDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.test.thecocktaildb.splashScreen.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/splash_fragment">
        <action
            android:id="@+id/action_splashFragment_to_cocktailsFragment"
            app:destination="@id/cocktailsFragment" />

    </fragment>
</navigation>