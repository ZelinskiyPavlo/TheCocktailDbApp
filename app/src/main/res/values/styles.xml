<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>


    <style name="TextRegular" parent="TextAppearance.AppCompat">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textColor">@color/text_default</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextBoldRegular" parent="TextRegular">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBoldTitle" parent="TextBoldRegular">
        <item name="android:textSize">@dimen/text_section</item>
    </style>

    <style name="TextHint" parent="TextRegular">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/text_hint</item>
    </style>

    <style name="TextSpacing">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="SectionDivider">
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/section_divider_background</item>
    </style>

</resources>
