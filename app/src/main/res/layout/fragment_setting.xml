<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.test.thecocktaildb.presentation.ui.setting.SettingViewModel" />

        <variable
            name="sharedViewModel"
            type="com.test.thecocktaildb.presentation.ui.cocktail.SharedMainViewModel" />

        <variable
            name="fragment"
            type="com.test.thecocktaildb.presentation.ui.setting.SettingFragment" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.setting.SettingFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.test.thecocktaildb.presentation.ui.custom.CustomToolbar
                android:id="@+id/host_fragment_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:toolbar_title_text="@string/setting_fragment_toolbar_title" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app_background"
                android:clickable="true"
                android:divider="?android:dividerHorizontal"
                android:focusable="true"
                android:orientation="vertical"
                android:showDividers="middle">

                <com.test.thecocktaildb.presentation.ui.custom.SettingRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    app:sr_icon_src="@drawable/ic_account_circle_28"
                    android:onClick="@{(view) -> fragment.openProfileFragment()}"
                    app:sr_main_text="@string/setting_fragment_profile_view_title" />

                <com.test.thecocktaildb.presentation.ui.custom.SettingRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:sr_icon_src="@drawable/ic_remove_circle_28"
                    app:sr_main_text="@string/setting_fragment_test_fragment_view_title"
                    android:onClick="@{(view) -> fragment.openTestFragment()}" />

                <com.test.thecocktaildb.presentation.ui.custom.SettingRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:sr_icon_src="@drawable/ic_cube"
                    app:sr_main_text="@string/setting_fragment_cube_view_title"
                    android:onClick="@{(view) -> fragment.openCubeView()}"/>

                <com.test.thecocktaildb.presentation.ui.custom.SettingRow
                    android:id="@+id/setting_fragment_language_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_24dp"
                    app:sr_additional_text="ENG"
                    android:onClick="@{(view) -> fragment.openLanguagePicker()}"
                    app:sr_icon_src="@drawable/ic_language_28"
                    app:sr_main_text="@string/setting_fragment_language_view_title" />

                <com.test.thecocktaildb.presentation.ui.custom.SettingRow
                    android:id="@+id/setting_fragment_battery_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:sr_additional_text="70%"
                    android:onClick="@{(view) -> void}"
                    app:sr_icon_src="@drawable/ic_battery_28"
                    app:sr_main_text="BATTERY_OKAY" />

                <LinearLayout
                    android:id="@+id/setting_fragment_show_nav_titles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/setting_row_background"
                    android:orientation="horizontal"
                    android:clickable="false">

                    <CheckBox
                        android:layout_marginStart="22dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textAppearance="@style/TextBoldRegular"
                        android:checked="@={sharedViewModel.shouldShowMainNavigationTitlesLiveData}"
                        android:text="@string/setting_fragment_show_nav_view_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>