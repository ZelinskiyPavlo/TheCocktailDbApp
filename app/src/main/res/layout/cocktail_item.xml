<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">


    <data>

        <variable
            name="obj"
            type="com.test.thecocktaildb.data.Cocktail" />

        <variable
            name="listener"
            type="com.test.thecocktaildb.utils.CocktailsItemUserActionListener" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:onClick="@{() -> listener.onItemClicked(obj)}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="16dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Media -->
            <ImageView
                android:id="@+id/cocktail_item_picture"
                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:scaleType="centerCrop"
                app:image_url="@{obj.strDrinkThumb}"/>

            <TextView
                android:id="@+id/cocktail_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{obj.strDrink}"
                android:padding="16dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>
