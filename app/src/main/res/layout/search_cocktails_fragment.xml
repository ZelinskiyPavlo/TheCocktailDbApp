<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.test.thecocktaildb.searchCocktailsScreen.SearchCocktailsViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_cocktails_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:adapter_tag="@{viewModel}"
            app:items="@{viewModel.items}"
            android:paddingTop="16dp"
            android:clipToPadding ="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/search_help_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter text to start search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/search_find_data_group"
            android:visibility="@{viewModel.isSearchResultEmpty ? View.GONE : View.VISIBLE}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="search_cocktails_rv" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/search_no_data_group"
            android:visibility="@{viewModel.isSearchResultEmpty ? View.VISIBLE : View.GONE}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="search_help_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>