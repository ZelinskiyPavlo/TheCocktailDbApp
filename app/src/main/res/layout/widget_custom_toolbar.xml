<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/toolbar_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_8dp"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@null"
        android:padding="4dp"
        android:src="@drawable/ic_arrow_back_24" />

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_72dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:layout_toStartOf="@id/toolbar_secondary_option_button"
        android:textAppearance="@style/TextBoldTitle"
        tools:text="@string/app_name_simplified" />

    <ImageButton
        android:id="@+id/toolbar_secondary_option_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:layout_toStartOf="@id/toolbar_main_option_button"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@null"
        android:padding="4dp"
        tools:src="@drawable/ic_sort_24" />

    <ImageButton
        android:id="@+id/toolbar_main_option_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@null"
        android:padding="4dp"
        tools:src="@drawable/ic_filter_list_24" />

</RelativeLayout>