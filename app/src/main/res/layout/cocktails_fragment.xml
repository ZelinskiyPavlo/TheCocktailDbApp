<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <import type="com.test.thecocktaildb.util.AdapterType"/>

        <variable
            name="sharedViewModel"
            type="com.test.thecocktaildb.ui.cocktailsScreen.fragmentHostScreen.SharedHostViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_background"
            android:clickable="true"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cocktails_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingStart="@dimen/margin_default"
                android:paddingTop="@dimen/margin_double"
                android:paddingEnd="@dimen/margin_default"
                android:visibility="gone"
                app:adapter_tag="@{AdapterType.COCKTAIL_ADAPTER}"
                app:items="@{sharedViewModel.cocktailsLiveData}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/empty_history_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="?attr/actionBarSize"
                android:text="@string/empty_history_text"
                android:textAppearance="@style/TextHint"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/empty_history_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{sharedViewModel.isCocktailListEmpty ? View.VISIBLE : View.GONE}"
                app:constraint_referenced_ids="empty_history_text" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/filled_history_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{sharedViewModel.isCocktailListEmpty ? View.GONE : View.VISIBLE}"
                app:constraint_referenced_ids="cocktails_rv" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>