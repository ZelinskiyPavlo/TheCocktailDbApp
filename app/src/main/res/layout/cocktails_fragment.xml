<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.test.thecocktaildb.ui.cocktailsScreen.CocktailsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cocktails_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingStart="@dimen/margin_default"
            android:paddingTop="@dimen/margin_double"
            android:paddingEnd="@dimen/margin_default"
            android:visibility="gone"
            app:adapter_tag="@{viewModel}"
            app:items="@{viewModel.itemsLiveData}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/empty_history_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="?attr/actionBarSize"
            android:text="@string/empty_history_text"
            android:textAppearance="@style/TextHint"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_double"
            android:layout_marginEnd="@dimen/margin_double"
            android:layout_marginBottom="@dimen/margin_double"
            android:background="@drawable/bg_battery_state_view"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_double"
            android:paddingEnd="@dimen/margin_double"
            app:layout_constraintTop_toTopOf="@+id/search_fab"
            app:layout_constraintBottom_toBottomOf="@+id/cocktails_rv"
            app:layout_constraintEnd_toStartOf="@+id/search_fab"
            app:layout_constraintStart_toStartOf="@+id/cocktails_rv">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{viewModel.batteryPercentLiveData}"
                android:textAppearance="@style/TextRegular"
                android:textColor="@color/text_white" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:tint="@{viewModel.isBatteryChargingLiveData()}"
                android:src="@drawable/ic_battery_24"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{viewModel.batteryStatusLiveData}"
                android:textAppearance="@style/TextRegular"
                android:textColor="@color/text_white" />

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/search_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_double"
            android:layout_marginBottom="@dimen/margin_double"
            android:elevation="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_search"
            app:tint="@color/ic_search_tint" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/empty_history_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{viewModel.isSearchResultEmptyLiveData ? View.VISIBLE : View.GONE}"
            app:constraint_referenced_ids="empty_history_text" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/filled_history_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{viewModel.isSearchResultEmptyLiveData ? View.GONE : View.VISIBLE}"
            app:constraint_referenced_ids="cocktails_rv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>